    <script>
    $(".date-picker").datepicker();

    $(".date-picker").on("change", function () {
        var id = $(this).attr("id");
        var val = $("label[for='" + id + "']").text();
        $("#msg").text(val + " changed");
    });
    </script>

    <!-- Location Picker -->
    <script type="text/javascript" src='http://maps.google.com/maps/api/js?sensor=false&libraries=places'></script>
    <script src="js/jquery-locationpicker/locationpicker.jquery.js"></script>
    <script>
    $('#sLoc').locationpicker({
        location: {latitude: 0, longitude: 0},   
        radius: 300,
        zoom: 15,
        scrollwheel: true,
        inputBinding: {
            latitudeInput: $('#sLoc-lat'),
            longitudeInput: $('#sLoc-lon'),
            radiusInput: $('#sLoc-radius'),
            locationNameInput: $('#sLoc-address')
        },
        enableAutocomplete: true,
        });
    $('#dest').locationpicker({
        location: {latitude: 0, longitude: 0},   
        radius: 300,
        zoom: 15,
        scrollwheel: true,
        inputBinding: {
            latitudeInput: $('#dest-lat'),
            longitudeInput: $('#dest-lon'),
            radiusInput: $('#dest-radius'),
            locationNameInput: $('#dest-address')
        },
        enableAutocomplete: true,
        });
    </script>
