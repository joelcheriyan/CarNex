    <div class="container">
      <h2>Create a Posting</h2>

      <div class="row" id="createPosting">
        <form role="form" action="/createpost" method="post">
        <!-- Column -->
        <div class="col-sm-12">
          <div class="panel panel-primary posting">
            <div class="panel-heading settings-panel-heading" id="postInfo">
              <a href="#collapsePosting" data-toggle="collapse" class="pull-right"></a>
              <h3 class="panel-title">Your Posting Information</h3>
            </div>

            <div id="collapsePosting" class="panel-collapse collapse in">
              <div class="panel-body">
                  <div class="input-group">
                    <label for="from" class="input-group-addon control-label">From</label>
	            <input name = "from" type="text" value ="" class="form-control" id="from" placeholder="Toronto">
   		    <label for="to" class="input-group-addon control-label">To</label>
		    <input name="to" type="text" value ="" class="form-control" id="to" placeholder="Ottawa">
                  </div>

                  <div class="input-group">
                    <label for="sDate" class="input-group-addon control-label">Start Date</label>
                    <input  id="sDate" name = "startdate" type="data" value ="" class="date-picker form-control" required/>
                    <label for="sDate" class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></label>
                  </div>
                  <div class="input-group">
                    <label for="rDate" class="input-group-addon control-label">Return Date (optional)</label>
                    <input id="rDate" name = "returndate" type="data" value ="" class="date-picker form-control" />
                    <label for="rDate" class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></label>
                  </div>

                  <div class="input-group">
                    <label for="desc" class="input-group-addon control-label">Description</label>
                    <textarea id="desc" name = "descript" value = "" class="form-control" rows="3" placeholder="Hello, I am a driver looking to carpool..." required></textarea>
                  </div>
              </div>
            </div>
          </div>

          <div class="panel panel-primary posting">
            <div class="panel-heading settings-panel-heading" id="startLoc">
              <a href="#collapseStartLoc" data-toggle="collapse" class="pull-right"></a>
              <h3 class="panel-title">Depart</h3>
            </div>

            <div id="collapseStartLoc" class="panel-collapse collapse in">
              <div class="panel-body">
                <div class="input-group">
                    <label for="sLoc-address" class="input-group-addon control-label">Depart</label>
                    <input id="sLoc-address" type="text" style="width: 600px" class="form-control" />
                    <div id="sLoc" class = "map_size" style="width: 600px; height: 400px;"></div>
                    <input type="hidden" id="sLoc-radius"/>
                    <input name = "sLoc_lat" type="hidden" id="sLoc-lat"/>
                    <input name = "sLoc_lon" type="hidden" id="sLoc-lon"/>
                </div>
              </div>
            </div>
          </div>

        <div class="panel panel-primary posting">
            <div class="panel-heading settings-panel-heading" id="destLoc">
              <a href="#collapseDestLoc" data-toggle="collapse" class="pull-right"></a>
              <h3 class="panel-title">Arrive</h3>
            </div>

            <div id="collapseDestLoc" class="panel-collapse collapse in">
              <div class="panel-body">
                <div class="input-group">
                    <label for="dest-address" class="input-group-addon control-label">Arrive</label>
                    <input id="dest-address" type="text" style="width: 600px" class="form-control" />
                    <div id="dest" class = "map_size" style="width: 600px; height: 400px;"></div>
                    <input type="hidden" id="dest-radius"/>
                    <input name = "dest_lat" type="hidden" id="dest-lat"/>
                    <input name = "dest_lon" type="hidden" id="dest-lon"/>
                </div>
              </div>
            </div>
        </div>

        
