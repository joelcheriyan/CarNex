    <div class="jumbotron">
      <div class="container">
	<%user.forEach(function(item){%>
        <h1>Welcome, <%=item.username%></h1>
        <p>Here's your account information.</p>
      </div>
    </div>

    <div class="container">
      <h2>Your Personal Information</h2>

      <div class="row" id="userInfo">

        <!-- column 1: User Info -->
        <div class="col-sm-12">
          <div class="panel panel-primary posting">
            <div class="panel-heading settings-panel-heading" id="changeUserInfo">
              <a href="#collapsePersonal" data-toggle="collapse" class="pull-right"></a>
              <h3 class="panel-title">Update Your Information</h3>
            </div>

            <div id="collapsePersonal" class="panel-collapse collapse in">
              <div class="panel-body">
                <!-- Should autofill this info from backend db -->
                <form class="form" role="form" id="userInfo" action = "/update" method ="post">
                  <div class="input-group">
                    <label for="name" class="input-group-addon control-label">Name</label>
                    <input name = "name" type="text" class="form-control" value=<%=item.name%> id="name" >
                  </div>

                  <div class="input-group">
                    <label for="username" class="input-group-addon control-label">Username</label>
                    <input name= "username" type="text" class="form-control" value=<%=item.username%>  id="username" >
                  </div>
		              
                  <div class="input-group">
                    <label for="password" class="input-group-addon control-label">Password</label>
                    <input name= "password" type="text" class="form-control"value= <%=item.password%> id="password" >
                  </div>

                  <div class="input-group">
                    <label for="email" class="input-group-addon control-label">Email</label>
                    <input name = "email" type="email" class="form-control" value=<%=item.email%> id="email" >
                  </div>

                  <div class="input-group">
                    <label for="phone" class="input-group-addon control-label">Phone</label>
                    <input name= "phone" type="text" class="form-control" value=<%=item.phone%> id="phone" >
                  </div>

		              <div class="panel-footer">
                  	<button class="btn btn-info pull-left"  type="submit" >
                  	 <span class="glyphicon glyphicon-cog"></span>
                 	   Update Information / Log out
                	  </button>
                  </div>
                </form>
              </div>   
            </div> 
          </div>
        </div> <!-- column 1: User Info -->
<%});%>
        
